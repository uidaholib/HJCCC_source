---
# find and count unique subjects
---
{%- assign raw-subjects = site.data[site.metadata] | map: "subjects" | join: ";" | split: ";" -%}
{%- capture subjects -%}{% for s in raw-subjects %}{% if s != "" %}{{ s | strip | downcase }};{% endif %}{%- endfor -%}{%- endcapture -%}
{%- assign subjects = subjects | split: ";" -%}
{%- assign uniqueSubjects = subjects | uniq | sort -%}
{ "subjects": [
    
    {% for unique in uniqueSubjects %}{% assign count = subjects | where_exp: "item", "item == unique" | size %}{ "subject" : {{ unique | capitalize | jsonify }}, "count" : {{ count | jsonify }}, "link" : {{ unique | uri_escape | prepend: "/browse.html#" | absolute_url | jsonify }} }{% unless forloop.last %},
    {% endunless %}{% endfor %}
]

}
